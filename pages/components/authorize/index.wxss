.box_mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,.5);
    z-index: 999;
}

.authorize_main_box{
    width: 72vw;
    height: fit-content;
    background-color: #fff;
    border-radius: 8rpx;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    text-align: center;
}

.authorize_main_box .authorize_icon{
    width: 420rpx;
    height: 315rpx;
    margin: 16rpx auto;
}

.authorize_main_box .authorize_title{
    text-align: center;
    color: #606266;
    margin-bottom: 24rpx;
}

.authorize_main_box .authorize_btn{
    width: 90%;
    padding: 20rpx 0;
    margin: 8rpx auto;
    color: #fff;
    background-color: #409EFF;
    border-radius: 8rpx;
}

.authorize_main_box .authorize_cancel_btn{                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                padding: 24rpx 0;
    width: 90%;
    margin: 0 auto;
    color: #909399;
    text-align: center;
}

.authorize_cancel_icon{
    position: absolute;
    top: 0;
    right: 0;
    padding: 20rpx 36rpx;
    font-size: 32rpx;
}

.hover{
    opacity: .8;
}

.item_box_shadow{box-shadow: 0 0 24px 0 rgba(48, 49, 51, 0.07);}
