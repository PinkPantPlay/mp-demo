.user_center_header{
    width: 94%;
    margin: 3%;
}

.user_center_header .userinfo{
    padding: 16rpx 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: flex-start;
    align-items: center;
}

.user_center_header .userinfo .user_avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: block;
    margin-right: 24rpx;
}

.user_center_header .userinfo .user_base{
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    align-content: center;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
}

.user_center_header .userinfo .user_base .user_nickname{
    font-size: 32rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 400rpx;
}

.user_center_header .userinfo .user_base .vip_sign{
    padding: 4rpx 16rpx;
    background-color: rgb(254 214 157);
    color: rgb(218 164 105);
    border-radius: 8rpx;
    font-size: 20rpx;
    text-align: center;
    font-weight: bold;
    display: inline-block;
}
.user_center_header .userinfo .user_base .user_code_box{
    display: flex;
}
.user_center_header .userinfo .user_base .user_code{
    border-right: 1px solid #EBEEF5;
    color: #333;
    text-align: center;
    font-size: 20rpx;
    width: 100rpx;
}
.user_center_header .userinfo .user_base .user_code:last-child{
    border: 0;
}
.user_center_header .userinfo .user_base .user_code_ico{
    width: 64rpx;
    height: 64rpx;
    display: block;
    margin: 0 18rpx;
}

.card_box{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: center;
    justify-content: center;
    align-items: center;
    margin: 24rpx 0;
}

.card_box .card_item{
    width: 20%;
    height: 100rpx;
    color: #303133;
    border-radius: 8rpx;
    margin: 24rpx 12rpx;
    position: relative;
    text-align: center;
    font-size: 22rpx;
}

.card_box .card_item .card_item_icon{
    width: 64rpx;
    height: 64rpx;
    margin: 0 auto;
    display: block;
}

.card_box .card_item .card_item_nums{
    position: absolute;
    top: -16rpx;
    right: 12rpx;
    height: 36rpx;
    line-height: 36rpx;
    background-color: #F56C6C;
    font-size: 20rpx;
    color: #fff;
    padding: 0 16rpx;
    border-radius: 20rpx;
}
