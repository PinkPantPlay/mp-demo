.user_center_header_bg{
    width: 100%;
    height: 400rpx;
    background: -webkit-linear-gradient(#b970a2, #f6f6f6); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(#b970a2, #f6f6f6); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(#b970a2, #f6f6f6); /* Firefox 3.6 - 15 */
