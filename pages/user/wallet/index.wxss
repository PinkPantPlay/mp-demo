.top_card{
    width: 88%;
    margin: 4% auto 0;
    padding: 2%;
    background-color: #fd983b;
    border-radius: 16rpx 16rpx 0 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: space-between;
    align-items: center;
}
.wallet_btn_group{
    padding: 24rpx 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: center;
    align-items: center;
}
.wallet_btn_group .wallet_btn{
    text-align: center;
    font-size: 20rpx;
    margin: 0 16rpx;
    padding: 0 16rpx;
}
.wallet_btn_group .wallet_btn .wallet_btn_icon{
    width: 40rpx;
    height: 40rpx;
}
.wallet_amount_box{
    margin-left: 24rpx;
    font-size: 24rpx;
}
.wallet_amount{
    font-size: 36rpx;
    font-weight: bold;
}

.wallet_amount .currency_icon{
    font-size: 24rpx;
}

.wallet_main_box{

}

.wallet_main_box .wallet_tab_bar{
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
    justify-content: center;
    align-items: center;
    padding-top: 8rpx;
    line-height: 28rpx;
}
.wallet_main_box .wallet_tab_bar .wallet_tab_item{
    color: #606266;
    padding: 24rpx 32rpx;
    border-bottom: 8rpx solid #fff;
    font-size: 28rpx;
}
.wallet_main_box .wallet_tab_bar .wallet_tab_item.active{
    color: #303133;
    border-bottom: 8rpx solid #fd983b;
}

.wallet_main_list{
    margin-top: 24rpx;
    padding-bottom: 32rpx;
}

